#!/usr/bin/env bash

set -e

PACKAGE=drm

. scripts/env.sh

cd_package

run_autogen \
--disable-cairo-tests \
--disable-intel \
--disable-radeon \
--disable-vmwgfx \
--disable-freedreno \
--disable-valgrind \
--disable-amdgpu \
--disable-vc4 \
--enable-static

run_make
run_make install

package_success
